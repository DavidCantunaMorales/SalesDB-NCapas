@model Entities.Categories

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles de la Categoría</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            color: #343a40;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 500px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #1d3557;
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }

        h3 {
            color: #457b9d;
            font-size: 20px;
            margin-bottom: 15px;
            border-bottom: 2px solid #1d3557;
            padding-bottom: 5px;
        }

        h4 {
            color: #1d3557;
            font-size: 18px;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        ul {
            padding-left: 20px;
            margin-bottom: 20px;
        }

        li {
            margin-bottom: 5px;
        }

        strong {
            color: #1d3557;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
        }

        a {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: #1d3557;
            font-weight: bold;
            text-align: center;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Detalles de la Categoría</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <div>
            <h3>Nombre de la Categoría: <strong>@Model.CategoryName</strong></h3>
            <p><strong>Descripción:</strong> @Model.Description</p>
        </div>

        <a href="@Url.Action("Index", "Category")">Volver a la lista de categorías</a>
    </div>
</body>
</html>