@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <style>
        /* General styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            color: #343a40;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            text-align: left;
            background-color: #ffffff;
            padding: 60px;
            border-radius: 10px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            position: relative;
        }

        .logout-button {
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: #1d3557;
            color: white;
            border: none;
            padding: 12px 20px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
        }

            .logout-button:hover {
                background-color: #457b9d;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .logout-button:active {
                transform: scale(0.97);
            }

        h2 {
            color: #1d3557;
            font-size: 24px;
            margin-top: 0;
            margin-bottom: 40px;
            position: absolute;
            top: 20px;
            left: 20px;
        }

        p {
            font-size: 18px;
            margin-bottom: 30px;
            color: #6c757d;
        }

        /* Button styles */
        .button-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: stretch;
        }

        button {
            background-color: #1d3557;
            color: white;
            border: none;
            padding: 15px;
            font-size: 18px;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
        }

            button:hover {
                background-color: #457b9d;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            button:active {
                transform: scale(0.97);
            }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 400px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

            .modal-content h3 {
                margin-top: 0;
                color: #1d3557;
            }

            .modal-content p {
                color: #6c757d;
                margin: 20px 0;
            }

        .close-button {
            background-color: #1d3557;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .close-button:hover {
                background-color: #457b9d;
            }
    </style>
    <script>
        function checkAccess(roleId, allowedRoles, redirectUrl) {
            const allowed = allowedRoles.includes(roleId);
            if (allowed) {
                window.location.href = redirectUrl;
            } else {
                const modal = document.getElementById("accessModal");
                modal.style.display = "flex";
            }
        }

        function closeModal() {
            const modal = document.getElementById("accessModal");
            modal.style.display = "none";
        }
    </script>
</head>
<body>
    <div class="container">
        <h2>Bienvenido</h2>
        <button class="logout-button" onclick="window.location.href='@Url.Action("Logout", "Home")'">Cerrar sesión</button>
        <p>Selecciona una opción:</p>
        
        <div class="button-container">
            <button onclick="checkAccess(@ViewBag.UserRole, [1], '@Url.Action("Index", "Usuario")')">Usuarios</button>
            <button onclick="checkAccess(@ViewBag.UserRole, [1, 2, 3], '@Url.Action("Index", "Category")')">Categorías</button>
            <button onclick="checkAccess(@ViewBag.UserRole, [1, 2, 3], '@Url.Action("Index", "Product")')">Productos</button>
        </div>
    </div>

    <!-- Modal de advertencia -->
    <div id="accessModal" class="modal">
        <div class="modal-content">
            <h3>Acceso Denegado</h3>
            <p>No tienes permisos para acceder a esta sección.</p>
            <button class="close-button" onclick="closeModal()">Cerrar</button>
        </div>
    </div>
</body>
</html>
